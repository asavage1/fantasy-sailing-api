{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "sort-keys": [
          "error",
          "asc",
          {
            "caseSensitive": true,
            "natural": true
          }
        ],
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "key-spacing": ["error"],
        "no-console": ["warn"]
    }
}
